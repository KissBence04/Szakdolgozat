<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BankCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5">

        <ImageView
            android:id="@+id/ivBankCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvKartyaSzam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivBankCard" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ivBankCard"
        android:layout_weight=".5">

        <Button
            android:id="@+id/btnKartya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:text="Virtális kártya igénylése"
            android:textColor="#C0C0C0"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTranzA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnKartya"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:text="Tranzakció"
            android:textColor="#C0C0C0"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBalances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnTranzA"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:text="Egyenleg"
            android:textColor="#C0C0C0"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBalances"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:background="@drawable/rounded_button"
            android:padding="16dp"
            android:text="Vissza"
            android:textColor="#C0C0C0"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>