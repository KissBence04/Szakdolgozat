<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transaction"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEgyenleg"
            android:text="Aktuális egyenlege: "
            android:textSize="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMoneySend"
            android:text="Pénzküldés"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMoneyRequest"
            android:text="Pénz kérés/fogadás"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnMoneySend"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCurrencyChange"
            android:text="Pénznem váltás"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnMoneyRequest"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnVissza"
            android:text="Vissza"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnCurrencyChange"/>
    </RelativeLayout>

</LinearLayout>